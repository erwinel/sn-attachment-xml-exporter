{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "lib",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "paths": {
          "*": ["./node_modules/@types", "./src"]
        },
        "lib": [
          "es6",
          "dom"
        ]
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "./**/*.d.ts",
      "./packages",
      "./node_modules",
      "./lib",
      "./obj",
      "./bin",
      "./Scripts"
    ]
}